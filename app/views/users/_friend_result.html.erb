<div class="results-block">
  <%= render 'layouts/messages' %>
</div>

<% if @friends %>
<div class="card card-header results-block">
  <% @friends.each do |friend| %>
  <table class="col-md-12">
    <tbody>
      <tr>
        <td><strong>Name: </strong> <%= friend.full_name %></td>
        <td><strong>Email: </strong> <%= friend.email %></td>
        <td>
          <strong>Actions: </strong>
          <%= link_to "View Profile", "#", class: "btn btn-sm btn-success" %>
          <% if current_user.not_friends_with?(friend.id) %>
          <%= link_to 'Follow friend?', "#", class: "btn btn-sm btn-success", method:  :post %>
          <% else %>
          <span class="badgy badge-secondary">You are friends</span>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>



  <% end %>
</div>
<% end %>